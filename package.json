{
  "name": "react-3d-shirt",
  "version": "0.0.7",
  "description": "A customizable rotating 3d t-shirt",
  "author": {
    "name": "Zebreus",
    "email": "lennarteichhorn@googlemail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zebreus/react-3d-shirt"
  },
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@emotion/eslint-plugin": "^11.10.0",
    "@ladle/react": "^2.4.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/three": "^0.144.0",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "@zebreus/resolve-tspaths": "^0.8.10",
    "datauri-cli": "^4.1.0",
    "eslint": "^8.23.1",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.1.2",
    "lint-staged": "^13.0.3",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.3",
    "typescript": "^4.8.3"
  },
  "scripts": {
    "lint": "tsc --noEmit && prettier . --check && eslint --cache --ignore-path .gitignore --ext ts,js,tsx,jsx .",
    "build": "rm -rf dist && tsc -p tsconfig.build.json && resolve-tspaths -p tsconfig.build.json",
    "prepack": "rm -rf dist && tsc -p tsconfig.build.json && resolve-tspaths -p tsconfig.build.json && pinst --disable",
    "format": "prettier --write .",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "postinstall": "husky install",
    "postpack": "pinst --enable",
    "start": "ladle serve",
    "generateShirtdata": "echo \"export const shirturi = \\`$(npx datauri-cli resources/shirt.glb)\\`\" > src/shirtdata.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@react-three/drei": "^9.34.1",
    "@react-three/fiber": "^8.8.9",
    "three": "^0.145.0"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "files": [
    "dist/**"
  ],
  "keywords": [
    "react",
    "component"
  ],
  "main": "dist/index.js"
}
